{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": false,
    "declaration": true,
    "module": "es2015",
    "removeComments": false,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": ["jest"],
    "outDir": "./lib"
  },
  
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}